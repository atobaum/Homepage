extends ../layout
block head
    //link(rel="stylesheet" type="text/css" href="/css/bookshelf/addReading.css")
    //script(src='/js/bookshelf/addReading.js')

block content
    div
        .ui.search
            .ui.icon.input
                input.prompt(type="text", placeholder='책 검색...')
                i.search.icon
            .results
                div(id='book_info', style="float:left;")
                    table
                        tbody
                            tr
                                td
                                    img
                                td
                                    strong 제목
                                    ul
                                        li 저자
                                        li 출판사|날짜

        #book_panel.ui.segment(style='height:150px')
            div(style="float:left")
                img#book_cover
            .ui.list(style="float:left; margin:15px")
                .item#book_title
                    strong
                .item#book_authors
                .item#book_publish
            .ui.button#change_book 책 바꾸기

        form.ui.form.segment(method='post', action='/bookshelf/book/add', id="input_form")
            .ui.message(style="display:none;")
                i.close.icon
                .header
                p
            .field
                .label 제목
                input(type="text", name="title", id="form_title")
            .field
                label 저자
                .multiple.search.selection.dropdown
                    .input(type='hidden', name='authors')
                    i.dropdown.icon
                    .munu.results
            .field
                label ISBN13
                input(type="number", name="isbn13", id="form_isbn13")
            .field
                label 출판사
                input(type="text", name="publisher", id="form_publisher")
            .field
                label 페이지수
                input(type="number", name="pages", id="form_pages", min="1")
            .field
                label 출판일
                input(type="date", name="published_date")
            .field
                label 언어
                input(type="text", name="language", id="form_lang")
            .field
                label 시리즈
                input(type="text", name="seriese_id", id="form_series")
            .field
                label 시리즈 번호
                input(type="text", name="series_number", id="form_series_num")
            .field
                label 링크
                input(type="text", name="link", id="form_link")
            .field
                label 부제목
                input(type="text", name="subtitle", id="form_subtitle")
            .field
                label 커버 이미지
                input(type="text", name="cover_URL", id="form_cover")
            .field
                label 분류
                input(type="text", name="category_id", id="form_cat")
            .field
                label 원제
                input(type="text", name="original_book_id", id="form_ori_title")
            .field
                label 원래 책
                input(type="text", name="title_original", id="form_ori_title_isbn13")

            .ui.buttons
                button#ok_btn.ui.button.positive(type='button') 완료
                button#can_btn.ui.button.negative(type='reset') 비우기
