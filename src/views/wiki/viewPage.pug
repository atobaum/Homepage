extends layout

block head2
    title #{wiki.title} - Wiki
    meta(name="wiki_title" content=wiki.title)
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/KaTeX/0.7.1/katex.min.css")
    link(rel="stylesheet" href='/static/css/wiki/wiki_view.css')
    script(src="/static/js/wiki/wiki_view.js")

block content
    .ui
        .ui.compact.menu.wiki_article_menu
            a.item(href='/wiki/edit/' + wiki.title) 수정
            a.item(href='/wiki/history/' + wiki.title) 역사
            a.item(href='/wiki/xref/' + wiki.title) 역링크
            - if (session.userAdmin){
            a.item#btn_etc 기타
            - }
        .wiki_content.language-javascript !{wiki.parsedContent}
    .ui.modal#modal_etc
        i.close.icon
        .header 기타 설정
        .content
            button.ui.button#btn_clear_cache Clear Cache
            button.ui.button#btn_change_title Change Title
            button.ui.button Change Access Control